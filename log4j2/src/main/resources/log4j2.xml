<?xml version="1.0" encoding="UTF-8"?>
<!--status：用于设置log4j2本身打印日志的级别，可以不设置，当设置成trace时，可以看到log4j2内部各种详细输出-->
<!--monitorInterval用于指定log4j自动重新配置的监测间隔时间，单位是m，最小是5m-->
<!--日志级别以及优先级排序：OFF > FATAL > ERROR > WARN > INFO > DEBUG > TRACE > ALL-->
<Configuration status="debug" monitorInterval="60">
    <!--变量配置-->
    <Properties>
        <!--日志格式化输出：%date表示日期，%thread表示线程名，%-5level，%msg：日志消息，%n换行符-->
        <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %c %M - %msg%n" />
        <Property name="LOG_DIR">/data/log/dmg/${ctx:contextpath}</Property>
        <Property name="LOG_NAME">log</Property>
    </Properties>

    <Appenders>
        <!--控制台日志打印-->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <!--按天生成一个日志-->
        <RollingFile name="RollingFile" fileName="${LOG_DIR}/${LOG_NAME}.log" filePattern="${LOG_DIR}/${LOG_NAME}.%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <!--滚动日志的策略-->
            <Policies>
                <!--interval属性用来指定多久滚动一次，以下设置一天-->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <!--每个文件大小限制策略-->
                <!--<SizeBasedTriggeringPolicy size="10KB"/>-->
            </Policies>
            <!--设置日志保存7天-->
            <DefaultRolloverStrategy>
                <Delete basePath="${LOG_DIR}" maxDepth="2">
                    <IfFileName glob="*/${LOG_NAME}.*.log"/>
                    <IfLastModified age="7d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>
</Configuration>